{
  "format_version": "1.10",
  "animation_controllers": {
    "controller.animation.player.running_controller": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "running": "query.is_sprinting && !query.is_swimming && !query.is_flying_elytra" }
          ]
        },
        "running": {
          "on_entry": [
            "tag @s add running"
          ],
          "animations": ["naruto_sprint"],
          "transitions": [
            { "default": "!query.is_sprinting || query.is_swimming || query.is_flying_elytra" }
          ],
          "on_exit": [
            "tag @s remove running"
          ]
        }
      }
    }
  }
}
